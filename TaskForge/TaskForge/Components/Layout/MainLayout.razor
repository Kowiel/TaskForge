@inherits LayoutComponentBase

<div class="page">
    <header>
        <TaskForge.Client.ClientComponents.NavMenu @rendermode="@(new InteractiveWebAssemblyRenderMode(prerender: true))" />
    </header>

    <main>
        <div class="content">
            @Body
        </div>
    </main>
    <Footer/>
</div>



@code {
    private static bool IsBrowser => OperatingSystem.IsBrowser();
}

@if (!IsBrowser)
{
    <div class="nav-loading">...</div>
}
else
{
    <TaskForge.Client.ClientComponents.NavMenu @rendermode="InteractiveWebAssembly" />
}
