@page "/Contact"

<PageTitle>Contact</PageTitle>

<h1>Contact</h1>

<p>Reach out to us with feedback or questions. This is a simple placeholder page.</p>

<form style="display:grid; gap:0.75rem; max-width:560px; margin: 1rem 0;">
    <label style="display:grid; gap:0.5rem;">
        <span>Name</span>
        <input type="text" placeholder="Your Name" style="padding:0.6rem; border:1px solid var(--border); border-radius:8px; background: var(--bg-surface); color: var(--text-primary);" />
    </label>
    <label style="display:grid; gap:0.5rem;">
        <span>Email</span>
        <input type="email" placeholder="you@example.com" style="padding:0.6rem; border:1px solid var(--border); border-radius:8px; background: var(--bg-surface); color: var(--text-primary);" />
    </label>
    <label style="display:grid; gap:0.5rem;">
        <span>Message</span>
        <textarea rows="4" placeholder="Type your message" style="padding:0.6rem; border:1px solid var(--border); border-radius:8px; background: var(--bg-surface); color: var(--text-primary);"></textarea>
    </label>
</form>

<NavLink href="/" style="display:inline-flex; align-items:center; justify-content:center; height:40px; padding:0 14px; border-radius:10px; background: var(--bg-surface); border:1px solid var(--border); box-shadow:0 2px 4px var(--shadow); color: var(--primary); font-weight:600; text-decoration:none;">Return</NavLink>
